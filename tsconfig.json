{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "js/*"
            ]
        }
    },
    "include": [
        "js/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "telegram-bot"
    ]
}